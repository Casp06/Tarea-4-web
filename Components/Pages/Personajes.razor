@page "/personajes"
@rendermode InteractiveServer
@inject SerieContext Sc

<h3>Personajes</h3>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apodo</th>
            <th>Raza</th>
            <th>Foto</th>
            <th>Edad</th>
            <th>Poder Carateritistico</th>
            </tr>
    </thead>
    <tbody>
        @foreach(var item in lista){
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Apodo</td>
            <td>@item.Raza</td>
            <td><img src="@item.FotoUrl" alt="@item.Nombre" height="100"></td>
            <td>@item.Edad</td>
            <td>@item.PoderCaracteristico</td>
        </tr>   
        }
    </tbody>
</table>

@code{
    List<Personaje> lista = new List<Personaje>();

    protected override Task OnInitializedAsync(){
        lista = Sc.Personajes.ToList();
        return Task.CompletedTask;
    }
}